<Window x:Class="PZ_15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10,10,502,10">
            <ListView x:Name="listViewInterfaces" Margin=" 10" SelectionChanged="listViewInterfaces_SelectionChanged" Height="399" Width="235">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>


        </StackPanel>
        <StackPanel Width="500" HorizontalAlignment="Right">
            <TextBlock x:Name="textBlockInterfaceType" Margin="0,10,0,0"/>
            <TextBlock x:Name="textBlockMaxSpeed" Margin="0,5,0,0"/>
            <TextBlock x:Name="textBlockTotalBytesSent" Margin="0,5,0,0"/>
            <TextBlock x:Name="textBlockTotalBytesReceived" Margin="0,5,0,0"/>
            <TextBlock x:Name="textBlockDownloadSpeed" Margin="0,5,0,0"/>
            <TextBlock x:Name="textBlockUploadSpeed" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
